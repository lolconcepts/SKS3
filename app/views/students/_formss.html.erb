<%= form_for @student , :html => {:multipart => true } do |f| %>
  <% if @student.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@student.errors.count, "error") %> prohibited this student from being saved:</h2>

      <ul>
      <% @student.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
	Upload Student Picture
	<%= f.file_field :photo %>
        <% if @student.photo_file_name != nil %>
           <%= link_to("Delete Photo",:controller => "students",:action => "remove_pic",:id => @student.id) %>
        <% end %>
  </div>
  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    Date of Birth<br />
    <%= f.date_select :dob ,:order => [:month,:day,:year], :start_year => 1920, :end_year => Time.now.year %>
  </div>
  <div class="field">
    <%= f.label :rank %><br />
    <%= f.collection_select :rank_id, Rank.all, :id, :color %>
  </div>
  <div class="field">
    Training Start Date<br />
    <%= f.date_select :startdate , :order => [:month, :day, :year], :start_year => 1920, :end_year => Time.now.year %>
  </div>
  <div class="field">
    <%= f.label :instructors %><br />
    <%= f.text_field :instructors %>
  </div>
  <div class="field">
    <%= f.label :classes_attended_each_week %><br />
    <%= f.number_field :classes_attended_each_week %>
  </div>
<div class="group">
