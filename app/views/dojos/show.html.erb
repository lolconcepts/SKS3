<style>
  .field{
        color: white;
    background: darkslategrey;
    height: fit-content;
    width: 650px;
    padding: 20px;
    border-radius: 15px;
    border: 5px solid;
    position: absolute;
    margin-left: auto;
    margin-right: auto;
    left: 50px;
  }
  .field > img {
    border-radius: 5px 5px 5px 5px;
    float: left;
    margin-bottom: 5px;
    margin-top: -2px;
    margin-right: 20px;
}
</style>
<nav class="navbar navbar-expand-lg navbar-dark indigo">
  <a class="navbar-brand" href="#"><img class="logo" src="/images/tnet.png" width="50" height="50"></a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText"
    aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarText">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= link_to 'Dashboard', root_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to 'Edit Configuration', edit_dojo_path(1), class: "nav-link" %>
      </li>
    </ul>
    <span class="navbar-text white-text">
       Side Kick&reg; Configuration Viewer
    </span>
  </div>
</nav>
<div class="field">
<% if @dojo.pic? then %>
        <%= image_tag @dojo.pic_url(:thumb) %>
<% end %>
<p>
  <b>Name:</b>
  <%= @dojo.name %>
</p>

<p>
  <b>Motto:</b>
  <%= @dojo.motto %>
</p>

<p>
  <b>Telephone:</b>
  <%= @dojo.telephone %>
</p>

<p>
  <b>Website:</b>
  <%= @dojo.website %>
</p>

<p>
  <b>Email:</b>
  <%= @dojo.email %>
</p>
<p>
 <b>Social Connections</b><br />
    <% if @dojo.twitter != "" %>
                <%= link_to(image_tag("/images/png_twitter2.png", :size => "25x25"),"https://www.twitter.com/#{@dojo.twitter}") %>
        <% else %>
                
        <% end %>

         <% if @dojo.facebook != "" %>
                <%= link_to(image_tag("/images/facebook.png", :size => "25x25"),@dojo.facebook) %>
        <% else %>
               
        <% end %>

        <% if @dojo.youtube != "" %>
                <%= link_to(image_tag("/images/youtube.jpg", :size => "25x25"),"https://www.youtube.com/user/#{@dojo.youtube}")%>
        <% else %>
                
        <% end %> 
</p>

<%= link_to 'Edit', edit_dojo_path(@dojo) %> |
<%= link_to 'Back', dojos_path %>
</div>
