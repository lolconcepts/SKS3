<style type="text/css">
  .home_video {
 width: 100vw;
 height: 100vh;
 position: absolute;
 display: flex;
 justify-content: center;
 object-fit: cover;
 top: 0;
 z-index: -2;
}
</style>
<%= image_tag "adrien-lemaire-N8Qlw1gi4rA-unsplash.jpg",class: "home_video" %>
<div class="container">
  <div class="jumbotron shadow">
    <h1 class="display-4">Sidekick Martial Arts Management</h1>
  <p class="lead">Welcome to your personal Management Portal.</p>
  <hr class="my-4">
  <p>Use the below form in order to login to your Sidekick Instance. If you have any issues, please reach out to us at <%=mail_to('blackbelt@t0urnament.net','blackbelt@t0urnament.net') %>.</p>
  <p class="lead">
  </div>
  <h1 class="text-center shadow">Sign up</h1>
  

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="form-group">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>